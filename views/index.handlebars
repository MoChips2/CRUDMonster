          </tr>
        </tbody>
      </table>

      <!--#############################################################-->
      <!-- Table of total spent, total earned and difference -->
      <!--#############################################################-->
      <table class="table table-borderless" id="math-table">
        <thead>
          <tr>
            <th colspan="2" id="math">MATH IT UP!</th>
          </tr>
        </thead>
        <tbody>
          <!-- Income value -->
          <tr>
            <td class="category-td">INCOME</td>
            <td class="expense-td">$4250.00</td>
          </tr>
